class Solution {
    public int[] twoSum(int[] arr, int k) {
        int[] res = new int[2];
        HashMap<Integer , Integer> map = new HashMap<>();
        for(int i = 0 ; i < arr.length ; i++){
            if(map.containsKey(k - arr[i])){
                int j = map.get(k - arr[i]);
                res[0] = i;
                res[1] = j;
                break;
            }else{
                map.put(arr[i] , i);
            }
        }
        return res;
        
    }
}
