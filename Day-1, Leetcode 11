class Solution {
    public int maxArea(int[] height) {
        int i=0,j=height.length-1,max_area = 0;
        while(i<j){
            if(height[i]>height[j]){
                max_area = Math.max(height[j]*(j-i),max_area);
                j--;
            }else{
                max_area = Math.max(height[i]*(j-i),max_area);
                i++;
            }
        }
        
        return max_area;
    }
}
